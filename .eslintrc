{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "classes": true,
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "env": {
        "mocha": true,
        "node": true,
        "es6": true,
        "browser": true
    },
    "rules": {
        "react/jsx-uses-react": 1,
        "react/jsx-first-prop-new-line": 1,
        "react/prefer-stateless-function": 0,
        "react/jsx-uses-vars": 0,
        "react/no-unused-prop-types": 1,
        "react/no-unknown-property": 1,
        "react/no-set-state": 0,
        "max-depth": [
            2,
            8
        ],
        "constructor-super": "error",
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "no-delete-var": 2,
        "no-cond-assign": 2,
        "no-console": 0,
        "newline-after-var": 1,
        "no-debugger": 1,
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-unreachable": 2,
        "prefer-arrow-callback": [
            1,
            {
                "allowNamedFunctions": true
            }
        ],
        "func-names": 1,
        "no-duplicate-case": 0,
        "no-irregular-whitespace": 2,
        "no-var": 0,
        "no-invalid-regexp": 2,
        "prefer-const": 0,
        "prefer-spread": 1,
        "prefer-template": 1,
        "space-before-function-paren": [
            1,
            "never"
        ],
        "curly": 0,
        "key-spacing": [
            2,
            {
                "beforeColon": true,
                "afterColon": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "keyword-spacing": [
            2,
            {
                "after": true,
                "before": true
            }
        ],
        "indent": [
            1,
            2,
            {
                "SwitchCase": 1,
                "MemberExpression": 1,
                "ObjectExpression": 1
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxBOF": 1
            }
        ],
        "camelcase": [
            1,
            {
                "properties": "always"
            }
        ],
        "no-unused-vars": [
            0,
            {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "semi": [
            1,
            "always"
        ],
        "consistent-this": [
            2,
            "self"
        ],
        "brace-style": [
            2,
            "stroustrup"
        ],
        "eol-last": 0,
        "no-shadow": 1,
        "space-before-blocks": 2,
        "new-cap": 0,
        "no-warning-comments": [
            2
        ]
    },
    "globals": {
        "__DEVELOPMENT__": true,
        "__CLIENT__": true,
        "expect": true,
        "sinon": true,
        "log": true
    }
}